#include <iostream>
#include<cstdlib>
#include <fstream>
#include <sstream>

using namespace std;

int main(){
	ostringstream text;
	ifstream myfile("student_data.txt");
	if(myfile.is_open()){
		text << myfile.rdbuf();
	   	string str = text.str();
		string str_search, str_replace;
		cout<<"Enter word to search";
		getline(cin, str_search);
		cout<<"Enter word to replace with: ";
		getline(cin, str_replace);
		size_t pos =str.find(str_search);
		str.replace(pos,str_search.length(),str_replace);
		myfile.close();
		ofstream out_file("student_data.txt");
		out_file<<str;
	}
	else cout<<"EMPTY BUFFER"<<endl;
	
}
